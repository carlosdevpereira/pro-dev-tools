{
  "name": "pro-dev-tools",
  "private": true,
  "version": "0.1.2",
  "description": "A 'swiss-knife' for the modern developer needs.",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "release:publish": "electron-builder -p always",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.carlosdevpereira.prodevtools",
    "productName": "Pro.Dev.Tools",
    "files": [
      "build",
      "dist/assets",
      "dist/icons",
      "dist/index.html",
      "*.js",
      "node_modules",
      "dist-electron",
      "public"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "publish": [
        {
          "provider": "github",
          "releaseType": "release"
        }
      ]
    },
    "win": {
      "publish": [
        {
          "provider": "github",
          "releaseType": "release"
        }
      ]
    }
  },
  "author": {
    "name": "Carlos Pereira",
    "email": "prodevtools@carlosdevpereira.com",
    "url": "https://github.com/carlosdevpereira"
  },
  "repository": {
    "url": "https://github.com/carlosdevpereira/pro-dev-tools"
  },
  "dependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@iconify-json/ri": "^1.1.12",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vueuse/components": "^10.5.0",
    "@vueuse/core": "^10.5.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "sass": "^1.69.3",
    "typescript": "^5.2.2",
    "unocss": "^0.56.5",
    "unplugin-icons": "^0.17.0",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.4.11",
    "vite-plugin-electron": "^0.14.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-i18n": "^9.5.0",
    "vue-tsc": "^1.8.19"
  }
}
